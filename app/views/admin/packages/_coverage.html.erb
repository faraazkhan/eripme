<%= fields_for 'coverages[]', coverage do |f| %>
<tr class="hoverable <%=cycle('', 'stripe')%>">
	<td><%=f.text_field 	:coverage_name %></td>
	<td>$<%=f.text_field	:price, :size => 6, :value => "%.2f" % coverage.price%></td>
	<td><%=f.check_box 		:should_be_deleted, {}, true, false%></td>
</tr>
<% end %>
